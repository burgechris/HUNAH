@model Hunah.Models.Animal

<h4>Add a New Furry Friend</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    <!-- these model.whatevers need to match the properties we set in our model folder -->
    @Html.TextBoxFor(model => model.Name)

    @Html.LabelFor(model => model.Gender)
    @Html.TextBoxFor(model => model.Gender)

    @Html.LabelFor(model => model.Breed)
    @Html.TextBoxFor(model => model.Breed)

    <input type="submit" value="Add new animal" />
}
<p>@Html.ActionLink("Show all Animals", "Index", "Animals")</p>
<p>@Html.ActionLink("Back to Main Page", "Index", "Home")</p>
