@using Hunah.Models;
@model List<Hunah.Models.Species>;

<h1>Species</h1>

@if (@Model.Count == 0)
{
  <h3>No species have been added yet!</h3>
} 

@foreach (Species species in Model)
{
  <li>@Html.ActionLink($"{species.Name}", "Details", new { id = species.SpeciesId })</li>
}

<p>@Html.ActionLink("Add new species", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>